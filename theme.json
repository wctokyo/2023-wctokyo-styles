{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "customTemplates": [
        {
            "name": "blank",
            "postTypes": [
                "page",
                "post"
            ],
            "title": "空っぽ"
        },
        {
            "name": "404",
            "postTypes": [
                "page"
            ],
            "title": "404"
        },
        {
            "name": "home",
            "postTypes": [
                "page"
            ],
            "title": "ホーム"
        },
        {
            "name": "page",
            "postTypes": [
                "page"
            ],
            "title": "固定ページ"
        },
        {
            "name": "single",
            "postTypes": [
                "post"
            ],
            "title": "投稿"
        }
    ],
    "settings": {
        "color": {
            "duotone": [
                {
                    "colors": [
                        "#000",
                        "#FFF"
                    ],
                    "slug": "black-and-white",
                    "name": "Black and White"
                }
            ]
        },
        "layout": {
            "contentSize": "920px",
            "wideSize": "1130px"
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Noto Sans JP', sans-serif",
                    "slug": "noto-sans",
                    "name": "Noto Sans JP"
                },
                {
                    "fontFamily": "'Josefin Sans', sans-serif",
                    "slug": "josefin-font",
                    "name": "Josefin Sans"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "12px",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "16px",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "20px",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "32px",
                    "name": "X Large"
                },
                {
                    "slug": "xx-large",
                    "size": "64px",
                    "name": "XX Large"
                }
            ],
            "dropCap": false,
            "customFontSize": true,
            "fluid": false,
            "lineHeight": true,
            "textColumns": true,
            "textTransform": true,
            "textDecoration": true,
            "fontWeight": true,
            "fontStyle": true,
            "letterSpacing": true
        },
        "spacing": {
            "spacingScale": {
                "operator": "*",
                "increment": 1.5,
                "steps": 7,
                "mediumStep": 1.5,
                "unit": "rem"
            },
            "spacingSizes": [
                {
                    "slug": "40",
                    "size": "1rem",
                    "name": "Small"
                },
                {
                    "slug": "50",
                    "size": "1.5rem",
                    "name": "Medium"
                },
                {
                    "slug": "60",
                    "size": "2rem",
                    "name": "Large"
                }
            ]
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "footer",
            "title": "Footer"
        },
        {
            "area": "uncategorized",
            "name": "comments",
            "title": "Comments"
        },
        {
            "area": "uncategorized",
            "name": "post-meta",
            "title": "Post Meta"
        }
    ]
}